<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.banana.projectapp.MainActivity$PlaceholderFragment">



        <TextView
            android:id="@+id/nome_utente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/user"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/numero_crediti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/credits"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="49dp"
            android:layout_below="@+id/nome_utente"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/removeAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Cancella il tuo account"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/numero_crediti"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/nome_utente"
        android:layout_centerHorizontal="true" />

</RelativeLayout>